{% extends 'base.html.twig' %}
{% block title %}Your posts{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
<div class="card-block">
    <div class="table-responsive">
        <table id="example" class="table table-striped table-bordered" style="table-layout: fixed; width:100%">
            <thead>
            <tr>
                <th>{{ 'Created at' | trans }}</th>
                <th>{{ 'Text' | trans }}</th>
                <th>{{ 'Verified' | trans }}</th>
                <th>{{ 'Photo' | trans }}</th>
                <th>{{ 'Actions' | trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
            <tr>
                <td>{{ post.getUpdatedAt()|date('Y-m-d H:i:s') }}</td>
                        <td style="word-wrap: break-word">{{ post.getText() }}</td>
                        <td>{{ post.getVerifiedAdminId()}}</td>
                        <td>
                            <img src="{{ asset('images/'~ post.getPhotoName() | default('noimagePost.png')) }}" alt="image" width="150" height="100">
                        </td>
                        <td style="word-wrap: break-word">
                            <a href="{{ path('post_edit',{'id' : post.id}) }}">{{ 'Edit' | trans }}</a>
                        </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

