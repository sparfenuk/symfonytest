<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}{{ 'Blog'| trans }}{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css"
          integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy"
          crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/custom-styles.css') }}">
    <style>
        #g-recaptcha-response {
            display: block !important;
            position: absolute;
            margin: -78px 0 0 0 !important;
            width: 302px !important;
            height: 76px !important;
            z-index: -999999;
            opacity: 0;
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>

<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">

            <a class="navbar-brand" href="{{ path('show_posts',{'page': 1}) }}">{{ 'Home' | trans }}</a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('create_post') }}">{{ 'Create post' | trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('user_posts') }}">{{ 'My posts' | trans }}</a>
                        </li>
                        {% if is_granted('ROLE_MODERATOR') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('sonata_admin_dashboard') }}">{{ 'Admin panel' | trans }}</a>
                            </li>
                        {% endif %}
                    {% endif %}
                </ul>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('profile') }}">{{ 'Profile' | trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">{{ 'Logout' | trans }}</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">{{ 'Login' | trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('registration') }}">{{ 'Create new account' | trans }}</a>
                        </li>
                    {% endif %}




                    {% set req = app.request %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ absolute_url(
                            path(
                                req.attributes.get('_route'),
                                req.attributes.get('_route_params')|merge({'_locale': 'en'})
                            )
                        ) }}">eng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{absolute_url(
                            path(
                                req.attributes.get('_route'),
                                req.attributes.get('_route_params')|merge({'_locale': 'ua'})
                            )
                        ) }}">ukr</a>
                    </li>

                </ul>
            </div>
        </div>

    </nav>
</header>

<main role="main" class="container main">
    {% include 'flash_messages.html.twig' %}

    {% block body %}{% endblock %}
</main>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<script>
    window.onload = function () {
        var $recaptcha = document.querySelector('#g-recaptcha-response');

        if ($recaptcha) {
            $recaptcha.setAttribute("required", "required");
        }
    };
</script>
{% block javascripts %}{% endblock %}
</body>
</html>